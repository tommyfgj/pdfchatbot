{
  "name": "pdfchatbot",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "pdfjs-annotation-extension-src"
  ],
  "scripts": {
    "dev": "concurrently \"npm --workspace pdfjs-annotation-extension-src run dev\" \"next dev\"",
    "dev:web": "next dev",
    "dev:extension": "npm --workspace pdfjs-annotation-extension-src run dev",
    "build": "npm --workspace pdfjs-annotation-extension-src run build && next build",
    "start": "next start",
    "start:standalone": "NODE_ENV=production node .next/standalone/server.js",
    "pack:standalone": "bash scripts/package-standalone.sh",
    "postbuild": "node -e \"const fs=require('fs'); if(!fs.existsSync('.next/standalone')){process.exit(1)}\"",
    "lint": "next lint"
  },
  "dependencies": {
    "@ai-sdk/azure": "^2.0.54",
    "@ai-sdk/openai": "1.0.10",
    "@ai-sdk/openai-compatible": "^1.0.22",
    "ai": "^5.0.80",
    "better-sqlite3": "^12.4.1",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dompurify": "^3.1.6",
    "exceljs": "^4.4.0",
    "file-saver": "^2.0.5",
    "github-markdown-css": "^5.8.1",
    "konva": "^9.3.6",
    "lucide-react": "^0.468.0",
    "marked": "^12.0.2",
    "nanoid": "^5.0.9",
    "next": "^15.1.6",
    "pdf-parse": "^2.4.5",
    "pdfjs-dist": "^4.3.136",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-konva": "^18.2.10",
    "tailwind-merge": "^2.6.0"
  },
  "devDependencies": {
    "@types/file-saver": "^2.0.7",
    "@types/node": "^22.10.2",
    "@types/react": "^19.0.6",
    "@types/react-dom": "^19.0.2",
    "ajv": "^8.17.1",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.0",
    "eslint": "^9.17.0",
    "eslint-config-next": "^15.1.6",
    "imagemin-svgo": "^11.0.1",
    "postcss": "^8.4.49",
    "svgo": "^4.0.0",
    "tailwindcss": "^3.4.17",
    "typescript": "^5.7.2"
  }
}
